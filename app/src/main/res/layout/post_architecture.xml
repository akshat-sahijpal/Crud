<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="19dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="14dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profileUserName"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/amaranth_bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    tools:text="Akshat Sahijpal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/uploadTime"
                    android:textSize="12sp"
                    android:fontFamily="@font/amiko_semibold"
                    android:layout_width="match_parent"
                    android:textColor="@color/semi_black"
                    android:text="Monday 12:30"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainPostParagraph"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/black"
                    tools:text="Because the people who are crazy enough to think they can change the World are the ones who do." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>